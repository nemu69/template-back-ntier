{
	"ConnectionStrings": {
		"DefaultConnection": "Data Source=(localdb)\\mssqllocaldb;Initial Catalog=template;TrustServerCertificate=true"
	},
	"ApiAddresses": {
	},
	"ClientHost": [
		"http://localhost:4200"
	],
	"Serilog": {
		"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.MSSqlServer" ],
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"System": "Warning",
				"Microsoft": "Warning",
				"Microsoft.AspNetCore": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
					"outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} - {Source} - {Instance}] {Message:lj}{NewLine}{Exception}"
				}
			},
			{
				"Name": "MSSqlServer",
				"Args": {
					"connectionString": "Data Source=localhost;Initial Catalog=jo;User ID=LOIC;Password=loic;TrustServerCertificate=true",
					"sinkOptionsSection": {
						"autoCreateSqlDatabase": false,
						"autoCreateSqlTable": false,
						"tableName": "Logs"
					},
					"columnOptionsSection": {
						"id": {
							"columnName": "ID"
						},
						"timeStamp": {
							"columnName": "TS"
						},
						"additionalColumns": [
							{
								"ColumnName": "Source",
								"DataType": "nvarchar",
								"DataLength": 50,
								"AllowNull": false
							},
							{
								"ColumnName": "Instance",
								"DataType": "nvarchar",
								"DataLength": 50,
								"AllowNull": true
							},
							{
								"ColumnName": "HasBeenSent",
								"DataType": "bit",
								"AllowNull": false
							}
						]
					}
				}
			}
		],
		"Enrich": [ "FromLogContext" ]
	}
}
